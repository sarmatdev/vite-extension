{
  "manifest_version": 2,
  "name": "Vite Extension",
  "version": "0.1.0",
  "description": "Vite Extension wallet",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "notifications", "activeTab"],
  "browser_action": {
    "default_title": "Vite Wallet",
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
